<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/year_make_model_trim"
            android:textColor="@android:color/primary_text_dark"
            android:paddingTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:text="1312 asdfa lk;"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <TextView
                android:id="@+id/price"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="24sp"
                android:text="$1231a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mileage"
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:textSize="24sp"
                android:text="asdf miles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        <!--</LinearLayout>-->
        <com.daimajia.slider.library.SliderLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/listing_photos"
            android:layout_width="@dimen/ed_img_lg_w"
            android:layout_height="@dimen/ed_img_lg_h"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_layout"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <com.gc.materialdesign.views.ButtonFlat
            style="@style/card.native.header_button_base.expand"
            android:text="@string/save"
            android:background="@android:color/background_light"
            android:id="@+id/save_listing"/>
        <com.gc.materialdesign.views.ButtonFlat
            style="@style/card.native.header_button_base.expand"
            android:text="@string/dealership"
            android:background="@android:color/background_light"
            android:id="@+id/see_dealership"/>
        <com.gc.materialdesign.views.ButtonFlat
            style="@style/card.native.header_button_base.expand"
            android:text="@string/call"
            android:background="@android:color/background_light"
            android:id="@+id/call_dealership"/>
    </LinearLayout>

</LinearLayout>