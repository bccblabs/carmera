<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView
            android:layout_marginBottom="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:column_count_portrait="2"
            card:column_count_landscape="2"
            card:grid_paddingRight="4dp"
            card:grid_paddingLeft="4dp"
            card:grid_paddingTop="1dp"
            card:grid_paddingBottom="0dp"
            card:list_card_layout_resourceID="@layout/staggered_card"
            android:id="@+id/data_staggered_grid_view"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>
</FrameLayout>
