<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/quick_search"
                style="@style/staggered_search_subtitle"/>
            <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                card:column_count_portrait="2"
                card:column_count_landscape="2"
                card:grid_paddingRight="4dp"
                card:grid_paddingLeft="4dp"
                card:grid_paddingTop="1dp"
                card:grid_paddingBottom="0dp"
                card:list_card_layout_resourceID="@layout/staggered_card"
                android:id="@+id/quick_grid"/>
            <View
                android:background="@color/black15"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <TextView
                android:text="@string/imports"
                style="@style/staggered_search_subtitle"/>
            <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                card:column_count_portrait="2"
                card:column_count_landscape="2"
                card:grid_paddingRight="4dp"
                card:grid_paddingLeft="4dp"
                card:grid_paddingTop="1dp"
                card:grid_paddingBottom="0dp"
                card:list_card_layout_resourceID="@layout/staggered_card"
                android:id="@+id/imports_grid"/>

            <TextView
                android:text="@string/cost_saver"
                style="@style/staggered_search_subtitle"/>
            <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView
                android:layout_width="match_parent"
                android:layout_height="330dp"
                card:column_count_portrait="2"
                card:column_count_landscape="2"
                card:grid_paddingRight="4dp"
                card:grid_paddingLeft="4dp"
                card:grid_paddingTop="1dp"
                card:grid_paddingBottom="0dp"
                card:list_card_layout_resourceID="@layout/staggered_card"
                android:id="@+id/low_cost_grid"/>

            <TextView
                android:text="@string/powertrain_search"
                style="@style/staggered_search_subtitle"/>
            <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView
                android:layout_width="match_parent"
                android:layout_height="440dp"
                card:column_count_portrait="2"
                card:column_count_landscape="2"
                card:grid_paddingRight="4dp"
                card:grid_paddingLeft="4dp"
                card:grid_paddingTop="1dp"
                card:grid_paddingBottom="0dp"
                card:list_card_layout_resourceID="@layout/staggered_card"
                android:id="@+id/powertrain_grid"/>
            <View
                android:background="@color/black15"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:text="@string/safety"
                style="@style/staggered_search_subtitle"/>
            <it.gmariotti.cardslib.library.extra.staggeredgrid.view.CardGridStaggeredView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                card:column_count_portrait="2"
                card:column_count_landscape="2"
                card:grid_paddingRight="4dp"
                card:grid_paddingLeft="4dp"
                card:grid_paddingTop="1dp"
                card:grid_paddingBottom="0dp"
                card:list_card_layout_resourceID="@layout/staggered_card"
                android:id="@+id/reliability_grid"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</FrameLayout>
