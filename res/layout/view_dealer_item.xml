<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:background="@color/blue_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:background="@color/blue_grey"
            android:padding="16dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Badfo Usijf"
                android:paddingTop="8dp"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dealer_name"/>
            <TextView
                android:text="124124 Owna Aeca"
                android:paddingTop="4dp"
                android:textSize="16sp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dealer_address"/>
            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:paddingTop="16dp"
                android:text="@string/sales_ratings"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                style="@style/RatingBar"
                android:paddingTop="4dp"
                android:id="@+id/sales_ratings"
                android:stepSize="0.1"
                android:rating="2.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <TextView
                android:paddingTop="8dp"
                android:text="@string/service_ratings"
                android:textSize="14sp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                style="@style/RatingBar"
                android:paddingTop="4dp"
                android:id="@+id/service_ratings"
                android:stepSize="0.1"
                android:rating="2.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
            <com.gc.materialdesign.views.ButtonFlat
                android:layout_gravity="end"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/call_dealer"
                android:background="@android:color/background_light"
                android:text="@string/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
