<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <it.gmariotti.cardslib.library.view.ForegroundLinearLayout
        android:background="@color/black_20"
        android:id="@+id/card_main_layout"
        style="@style/card.main_layout_foreground"
        android:orientation="vertical"
        android:layout_width="@dimen/ed_img_sm_w"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:background="@android:color/background_light"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="@dimen/ed_img_sm_w"
                android:layout_height="@dimen/ed_img_sm_h">
                <ImageView
                    android:layout_width="@dimen/ed_img_sm_w"
                    android:layout_height="@dimen/ed_img_sm_h"
                    android:id="@+id/staggered_image_holder"/>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:background="@color/black_20"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <widgets.CanaroTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_dark"
                        android:textAllCaps="true"
                        android:text="caoep"
                        android:id="@+id/staggered_card_title"
                        />
                    <com.gc.materialdesign.views.ButtonFlat
                        android:visibility="gone"
                        android:background="@color/selected_item_color"
                        android:id="@+id/add_to_search"
                        android:text="@string/add_to_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </it.gmariotti.cardslib.library.view.ForegroundLinearLayout>
</LinearLayout>