<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">
    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:gravity="center"
        android:background="@color/card_pressed"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            style="@style/Toolbar">
            <ImageView
                android:id="@+id/content_hamburger"
                style="@style/ImageView.Hamburger"
                android:src="@drawable/ic_menu_black_rotate" />
            <widgets.CanaroTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/guillotine_item_text_size" />
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>
    </LinearLayout>

        <RelativeLayout
            android:id="@+id/fab_toolbar"
            android:background="@android:color/background_light"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <com.gc.materialdesign.views.ButtonFlat
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="36dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="@android:color/background_dark"
                        android:id="@+id/clear_btn"
                        android:text="@string/str_clear"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.gc.materialdesign.views.ButtonFlat
                        android:id="@+id/ic_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/background_dark"
                        android:text="@string/str_filter"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.gc.materialdesign.views.ButtonFlat
                        android:id="@+id/ic_search"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/selected_item_color"
                        android:text="@string/str_search_all"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/text_search_view"
        android:hint="@string/search_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>