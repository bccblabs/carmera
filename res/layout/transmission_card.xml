<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/txn_speeds_row">
            <TextView
                style="@style/entry_title"
                android:text="@string/txn_speeds"/>
            <TextView
                style="@style/entry_title"
                android:id="@+id/txn_speeds"/>
        </TableRow>
        <TableRow
            android:id="@+id/txn_type_row">
            <TextView
                style="@style/entry_title"
                android:text="@string/txn_type"/>
            <TextView
                style="@style/entry_title"
                android:id="@+id/txn_type"/>
        </TableRow>
        <TableRow
            android:id="@+id/drivetrain_row">
            <TextView
                style="@style/entry_title"
                android:text="@string/drivetrain"/>
            <TextView
                style="@style/entry_title"
                android:id="@+id/drivetrain"/>
        </TableRow>
    </TableLayout>
</LinearLayout>