<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="56dp"
    android:background="@color/background_material_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_criteria_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_viewpager">

            <android.support.v7.widget.CardView
                android:id="@+id/coupe_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/search_image_view"
                        android:src="@drawable/coupe"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/coupe_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_coupe"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/convertible_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/search_image_view"
                        android:src="@drawable/convertible"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/convertible_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_convertible"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/sedan_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/search_image_view"
                        android:src="@drawable/sedan"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/sedan_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_sedan"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/suv_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/suv"
                        style="@style/search_image_view"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/suv_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_suv"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/wagon_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/wagon"
                        style="@style/search_image_view"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/wagon_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_wagon"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/truck_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/truck"
                        style="@style/search_image_view"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/truck_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_truck"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/van_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/vw_van"
                        style="@style/search_image_view"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/van_search"/>
                    </LinearLayout>
                    <com.gc.materialdesign.views.ButtonFloatSmall
                        style="@style/add_to_search_btn"
                        materialdesign:iconDrawable="@drawable/ic_add_black_24dp"
                        android:background="@android:color/background_light"
                        android:id="@+id/add_van"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</RelativeLayout>