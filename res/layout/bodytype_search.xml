                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/suv"
                            style="@style/search_image_view"/>
                        <View
                            style="@style/search_container">
                        </View>
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/suv_search"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
                            android:text="@string/add_to_search"
                            android:background="@android:color/background_dark"
                            android:id="@+id/add_suv"/>
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
                            android:text="@string/see_all"
                            android:background="@color/selected_item_color"
                            android:id="@+id/see_suv"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/wagon_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/wagon"
                            style="@style/search_image_view"/>
                        <View
                            style="@style/search_container">
                        </View>
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/wagon_search"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
