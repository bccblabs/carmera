                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
                            android:text="@string/add_to_search"
                            android:background="@android:color/background_dark"
                            android:id="@+id/add_truck"/>
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
                            android:text="@string/see_all"
                            android:background="@color/selected_item_color"
                            android:id="@+id/see_truck"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/van_search"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/vw_van"
                            style="@style/search_image_view"/>
                        <View
                            style="@style/search_container">
                        </View>
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/van_search"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginStart="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
                            android:text="@string/add_to_search"
                            android:background="@android:color/background_dark"
                            android:id="@+id/add_van"/>
                        <com.gc.materialdesign.views.ButtonFlat
                            style="@style/card.native.header_button_base.expand"
                            android:text="@string/see_all"
                            android:background="@color/selected_item_color"
                            android:id="@+id/see_van"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"/>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</LinearLayout>