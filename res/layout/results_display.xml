<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
    android:orientation="vertical"
    android:background="@color/background_material_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_container">
    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <carmera.io.carmera.widgets.SquareImageView
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/photo_holder"
            />
        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/upload_progress_bar"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/background_light" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_alignParentTop="true"
        android:id="@+id/car_gen_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/retake_photo_btn"
        android:layout_alignBottom="@+id/car_gen_recycler"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:text="@string/back_to_camera"
        android:background="@android:color/holo_blue_light">
    </com.gc.materialdesign.views.ButtonRectangle>

</RelativeLayout>