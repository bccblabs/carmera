<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:background="@color/background_floating_material_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:layout_centerInParent="true"
        android:id="@+id/loading_container"
        android:layout_width="50dp"
        android:background="@color/card_pressed"
        android:layout_height="50dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listings_recylcer"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.gc.materialdesign.views.ButtonRectangle
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_margin="28dp"
        android:layout_height="72dp"
        android:layout_width="match_parent"
        android:background="@color/selected_item_color"
        android:id="@+id/more_cars"
        android:text="@string/more_cars"/>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:visibility="invisible"
        android:id="@+id/filter_sort_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonSize="mini"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_expandDirection="up"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/sort_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_size="mini"
            fab:fab_title="@string/str_sort"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="@string/str_filter"
            fab:fab_size="mini"
            fab:fab_colorPressed="@color/white_pressed"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>