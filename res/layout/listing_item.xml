<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <carmera.io.carmera.widgets.SquareImageView
                android:layout_centerInParent="true"
                android:id="@+id/photo"
                android:layout_width="320dp"
                android:layout_height="240dp"/>
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="#76000000"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/listing_title"
                    android:id="@+id/car_info"/>
                <TextView
                    style="@style/price_title"
                    android:id="@+id/price"/>
                <TextView
                    style="@style/mileage_title"
                    android:id="@+id/mileage"/>
                <TextView
                    style="@style/mileage_title"
                    android:id="@+id/listed_since"/>
                <TextView
                    style="@style/mileage_title"
                    android:id="@+id/dealer_name"/>
                <TextView
                    style="@style/dealer_info_title"
                    android:visibility="gone"
                    android:id="@+id/dealer_address"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>