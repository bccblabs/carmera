<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/tools"
    android:background="@color/background_material_light"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_info_trim"
                    android:textColor="@android:color/primary_text_dark"
                    android:paddingTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:text="1312 asdfa lk;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<LinearLayout-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <TextView
                        android:id="@+id/listing_price"
                        android:textColor="@android:color/primary_text_dark"
                        android:paddingTop="4dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="24sp"
                        android:text="$1231a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/listing_mileage"
                        android:textColor="@android:color/primary_text_dark"
                        android:paddingTop="4dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="16dp"
                        android:textSize="24sp"
                        android:text="asdf miles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                <!--</LinearLayout>-->
            </LinearLayout>
            <ImageView
                android:id="@+id/listing_photo"
                android:layout_width="@dimen/ed_img_lg_w"
                android:layout_height="@dimen/ed_img_lg_h"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/listed_since"
                    android:textColor="@color/cardview_light_background"
                    android:paddingTop="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:textSize="16sp"
                    android:text="lisadsf adinc in91 19 9j1;"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>