<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/expand_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <widgets.CanaroTextView
        style="@style/listing_title_small"
        android:id="@+id/dealership_name"/>
    <widgets.CanaroTextView
        style="@style/listing_title_small"
        android:id="@+id/dealership_address"/>
    <widgets.CanaroTextView
        style="@style/listing_title_small"
        android:id="@+id/dealership_email"/>
    <widgets.CanaroTextView
        style="@style/listing_title_small"
        android:id="@+id/dealership_phone"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </View>
        <ImageView
            android:src="@drawable/facebook"
            android:adjustViewBounds="true"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="46dp"
            android:layout_height="46dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </View>
        <ImageView
            android:adjustViewBounds="true"
            android:gravity="center_horizontal|center_vertical"
            android:src="@drawable/twitter"
            android:layout_width="46dp"
            android:layout_height="46dp" />
        <View
            android:adjustViewBounds="true"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </View>
        <ImageView
            android:src="@drawable/instagram"
            android:layout_width="46dp"
            android:layout_height="46dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </View>
    </LinearLayout>

</LinearLayout>