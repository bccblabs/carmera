<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/search_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        app:viewpager_pagerTitleStrip="@layout/material_view_pager_pagertitlestrip_newstand"
        app:viewpager_logoMarginTop="25dp"
        app:viewpager_color="@color/selected_item_color"
        app:viewpager_headerHeight="50dp"
        app:viewpager_headerAlpha="1.0"
        app:viewpager_imageHeaderDarkLayerAlpha="0.2"
        app:viewpager_hideLogoWithFade="false"
        app:viewpager_hideToolbarAndTitle="true"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_parallaxHeaderFactor="1.5"
        app:viewpager_headerAdditionalHeight="15dp"
        app:viewpager_displayToolbarWhenSwipe="false"
        app:viewpager_transparentToolbar="true"
        app:viewpager_animatedHeaderImage="true"
        />
    <com.gc.materialdesign.views.ButtonRectangle
        android:layout_weight="1"
        android:layout_margin="28dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="@color/selected_item_color"
        android:id="@+id/search_listings_base"
        android:text="@string/start_search"/>
</LinearLayout>