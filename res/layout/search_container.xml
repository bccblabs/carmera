<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_material_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/search_criteria_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_viewpager">

            <android.support.v7.widget.CardView
                android:id="@+id/basic_container"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/search_image_view"
                        android:src="@drawable/basic_search_image"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/basic_search"/>
                        <widgets.CanaroTextView
                            style="@style/search_subtitle"
                            android:text="@string/basic_search_desc"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/condition_container"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/search_image_view"
                        android:src="@drawable/condition_search_image"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/conditions_search"/>
                        <widgets.CanaroTextView
                            style="@style/search_subtitle"
                            android:text="@string/conditions_search_desc"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/equipment_container"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        style="@style/search_image_view"
                        android:src="@drawable/equipment_search_image"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/equipments_search"/>
                        <widgets.CanaroTextView
                            style="@style/search_subtitle"
                            android:text="@string/equipments_search_desc"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/reliability_container"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/reliability_search_image"
                        style="@style/search_image_view"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/reliability_search"/>
                        <widgets.CanaroTextView
                            style="@style/search_subtitle"
                            android:text="@string/reliability_search_desc"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/mechanical_container"
                style="@style/search_card_view"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/mechanical_search_image"
                        style="@style/search_image_view"/>
                    <LinearLayout
                        style="@style/search_container">
                        <widgets.CanaroTextView
                            style="@style/search_title"
                            android:text="@string/mechanical_search"/>
                        <widgets.CanaroTextView
                            style="@style/search_subtitle"
                            android:text="@string/mechanical_search_desc"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_marginTop="5dp"
                    android:layout_height="72dp"
                    android:layout_width="match_parent"
                    android:background="@color/demoextra_card_background_color6"
                    android:id="@+id/sort_listings_base"
                    android:text="@string/str_sort"/>
                <com.gc.materialdesign.views.ButtonRectangle
                    android:layout_marginTop="5dp"
                    android:layout_height="72dp"
                    android:layout_width="match_parent"
                    android:background="@color/selected_item_color"
                    android:id="@+id/search_listings_base"
                    android:text="@string/start_search"/>

            </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</RelativeLayout>