<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/text_overlay"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2014 BMW x3"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/light_spring_green"
        android:id="@+id/listing_yr_mk_md_view"/>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/heart_btn"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            fab:fab_icon="@drawable/ic_action_heart_white"
            fab:fab_addButtonStrokeVisible="true"
            fab:fab_colorNormal="@color/light_grey"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_size="mini"/>
        <com.parse.ParseImageView
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start|center_vertical"
            android:id="@+id/listing_photo_view"/>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listing_price_view"
                android:textColor="@color/sinch_purple"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="$43,290"/>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_spring_green"
                android:id="@+id/listing_seller_info_view"
                android:text="BMW of GETTERVILLE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_spring_green"
                android:text="Posted 5 weeks ago"
                android:id="@+id/listing_post_date"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_location_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/light_spring_green"
                    android:text="15 mi"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/multiple_actions_left"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Specs"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_icon="@drawable/ic_action_info_white"
            fab:fab_colorNormal="@color/pink"
            fab:fab_colorPressed="@color/pink_pressed"
            fab:fab_size="mini"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/listings_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Listings"
            fab:fab_icon="@drawable/ic_action_send_white"
            fab:fab_colorNormal="@color/blue_semi_transparent"
            fab:fab_colorPressed="@color/blue_semi_transparent_pressed"
            fab:fab_size="mini"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/listings_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Share"
            fab:fab_icon="@drawable/ic_action_share_2_white"
            fab:fab_colorNormal="@color/sky_blue"
            fab:fab_colorPressed="@color/transparent_sky_blue"
            fab:fab_size="mini"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/listings_incentives_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Incentives"
            fab:fab_icon="@drawable/ic_action_achievement_white"
            fab:fab_colorNormal="@color/gold"
            fab:fab_colorPressed="@color/gold_transparent"
            fab:fab_size="mini"
            />
        <!--<com.getbase.floatingactionbutton.FloatingActionButton-->
            <!--android:id="@+id/saved_vehicle_similar_listings"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--fab:fab_title="Incentives"-->
            <!--fab:fab_icon="@drawable/ic_action_eye_open_white"-->
            <!--fab:fab_colorNormal="@color/dark_green"-->
            <!--fab:fab_colorPressed="@color/light_spring_green"-->
            <!--fab:fab_size="mini"-->
            <!--/>-->

    </LinearLayout>
</LinearLayout>
