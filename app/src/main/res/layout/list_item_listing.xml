<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_overlay"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.parse.ParseImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:id="@+id/listing_photo_view"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listing_yr_mk_md_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listing_price_view"
                android:text="$43,290"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listing_seller_info_view"
                android:text="BMW of GETTERVILLE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listing_post_date"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:descendantFocusability="afterDescendants">
        <LinearLayout
            style="@style/ButtonLayout">
            <Button
                style="@style/ButtonStyle"
                android:background="@drawable/ic_action_balloon"
                android:id="@+id/listing_vehicle_info_btn"/>
            <TextView
                style="@style/ButtonText"
                android:text="car info"/>
        </LinearLayout>
        <LinearLayout
            style="@style/ButtonLayout">
            <Button
                style="@style/ButtonStyle"
                android:background="@drawable/ic_action_mustache"
                android:id="@+id/listing_favorite_button"/>
            <TextView
                style="@style/ButtonText"
                android:text="51"
                android:id="@+id/listing_likes_cnt"/>
        </LinearLayout>
        <LinearLayout
            style="@style/ButtonLayout">
            <Button
                style="@style/ButtonStyle"
                android:id="@+id/listing_contact_seller_btn"
                android:background="@drawable/ic_action_send"/>
            <TextView
                style="@style/ButtonText"
                android:text="contact"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
