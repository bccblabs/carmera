<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        android:id="@+id/engine_table">
        <TableRow>
            <LinearLayout
                style="@style/TableLayout">
                <TextView
                    style="@style/TableRowEntry"
                    android:id="@+id/dealer_name"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                style="@style/TableLayout">
                <TextView
                    style="@style/TableRowEntry"
                    android:id="@+id/dealer_addr"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                style="@style/TableLayout">
                <TextView
                    style="@style/TableRowEntry"
                    android:id="@+id/dealer_phone"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/percentile"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/pct_hdr"
                expandable:contentLayout="@layout/pct_content"
                />

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/make_model"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/performance_agg_hdr"
                expandable:contentLayout="@layout/performance_agg_content"
                />

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/economy_tco"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/economy_agg_hdr"
                expandable:contentLayout="@layout/economy_agg_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/performance"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/edmund_agg_hdr"
                expandable:contentLayout="@layout/edmund_agg_content"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>