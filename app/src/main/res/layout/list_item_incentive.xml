<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incentive_header_layout"
        android:orientation="vertical">
        <TextView
            style="@style/TableEntryTitle"
            android:id="@+id/incentive_name"/>
        <TextView
            style="@style/TableEntry"
            android:id="@+id/incentive_duration"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incentive_details_layout"
        android:orientation="vertical">
        <TextView
            style="@style/TableEntry"
            android:id="@+id/incentive_details"/>
        <!--<TextView-->
            <!--style="@style/TableEntry"-->
            <!--android:id="@+id/incentive_restrictions"/>-->
    </LinearLayout>

</LinearLayout>