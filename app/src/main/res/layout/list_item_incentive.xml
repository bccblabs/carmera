<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent_dark_gray"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incentive_header_layout"
        android:background="@color/transparent_sky_blue"
        android:orientation="vertical">
        <TextView
            style="@style/TableEntryTitle"
            android:textSize="18sp"
            android:id="@+id/incentive_name"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Ivory"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:id="@+id/incentive_duration"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incentive_details_layout"
        android:orientation="vertical">
        <TextView
            style="@style/TableRowEntry"
            android:id="@+id/incentive_details"/>
    </LinearLayout>
</LinearLayout>