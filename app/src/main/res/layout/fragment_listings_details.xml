<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.parse.ParseImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/listings_photo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Ivory"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="2014 Audi TT"
                android:id="@+id/listing_vehicle_info_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Ivory"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="33,000 miles"
                android:id="@+id/listings_mileage_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Ivory"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="$43,290"
                android:id="@+id/listings_pricing_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_spring_green"
                android:text="Posted 5 weeks ago"
                android:id="@+id/listing_post_date"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/edmunds_branding"/>
            </LinearLayout>

        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                style="@style/TableTitle"
                android:layout_margin="3dp"
                android:text="PERFORMANCE"/>
            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="3dp"
                android:layout_height="wrap_content"
                android:id="@+id/engine_table">
                <TableRow>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_engine_info"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/engine_spec_textview"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_transmission_type"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/transmission_type_textview"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_hp"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/engine_hp_textview"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_transmission_speed"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/transmission_speed_textview"/>
                    </LinearLayout>

                </TableRow>
                <TableRow>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_torque"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/engine_torque_textview"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_drivetrain"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/driven_wheels_textview"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TextView
                style="@style/TableTitle"
                android:layout_margin="3dp"
                android:text="GAS MILEAGE"/>
            <TableLayout
                android:layout_gravity="start"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_city_mpg"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/city_mpg_textview"/>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/TableLayout">
                        <TextView
                            style="@style/TableRowTitle"
                            android:text="@string/str_highway_mpg"/>
                        <TextView
                            style="@style/TableRowEntry"
                            android:id="@+id/highway_mpg_textview"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
