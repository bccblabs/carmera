<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Engine Displacement (cc)"/>

    <com.appyvet.rangebar.RangeBar
        style="@style/SearchRangeBarStyle"
        android:id="@+id/displacement_bar"
        custom:tickStart="500"
        custom:tickEnd="10000"
        custom:tickInterval="500"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Engine Horsepower (hp)"/>

    <com.appyvet.rangebar.RangeBar
        style="@style/SearchRangeBarStyle"
        android:id="@+id/horsepower_bar"
        custom:tickStart="50"
        custom:tickEnd="1000"
        custom:tickInterval="50"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Engine Torque (lb/ft)"/>

    <com.appyvet.rangebar.RangeBar
        style="@style/SearchRangeBarStyle"
        android:id="@+id/torque_bar"
        custom:tickStart="50"
        custom:tickEnd="1000"
        custom:tickInterval="50"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Engine Cylinder Count"/>

    <com.appyvet.rangebar.RangeBar
        style="@style/SearchRangeBarStyle"
        android:id="@+id/cylinder_bar"
        custom:tickStart="1"
        custom:tickEnd="18"
        custom:tickInterval="1"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Engine Compressor Type"/>
    <veme.cario.com.CARmera.util.MultiSelectSpinner
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/engine_compressor_type"/>

</LinearLayout>