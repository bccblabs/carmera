<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Combined MPG"/>
    <TextView
        style="@style/RangeBarValue"
        android:id="@+id/combined_mpg_tv"/>
    <com.appyvet.rangebar.RangeBar
        style="@style/SearchRangeBarStyle"
        android:id="@+id/combined_mpg_range_bar"
        custom:tickStart="5"
        custom:tickEnd="40"
        custom:tickInterval="5"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Average Fuel Cost ($/year)"/>
    <TextView
        style="@style/RangeBarValue"
        android:id="@+id/fuel_cost_tv"/>
    <com.appyvet.rangebar.RangeBar
        android:id="@+id/fuel_cost_range_bar"
        custom:tickStart="500"
        custom:tickEnd="10000"
        custom:tickInterval="500"
        style="@style/SearchRangeBarStyle"
        />


    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Average Repair Cost ($/year)"/>
    <TextView
        style="@style/RangeBarValue"
        android:id="@+id/repair_cost_tv"/>
    <com.appyvet.rangebar.RangeBar
        android:id="@+id/repair_cost_range_bar"
        custom:tickStart="500"
        custom:tickEnd="10000"
        custom:tickInterval="500"
        style="@style/SearchRangeBarStyle"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Average Maintenance Cost ($/year)"/>
    <TextView
        style="@style/RangeBarValue"
        android:id="@+id/maintenance_cost_tv"/>
    <com.appyvet.rangebar.RangeBar
        android:id="@+id/maintenance_cost_range_bar"
        custom:tickStart="500"
        custom:tickEnd="10000"
        custom:tickInterval="500"
        style="@style/SearchRangeBarStyle"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Average Insurance Cost ($/year)"/>
    <TextView
        style="@style/RangeBarValue"
        android:id="@+id/insurance_cost_tv"/>
    <com.appyvet.rangebar.RangeBar
        android:id="@+id/insurance_cost_range_bar"
        custom:tickStart="500"
        custom:tickEnd="10000"
        custom:tickInterval="500"
        style="@style/SearchRangeBarStyle"
        />

    <TextView
        style="@style/SearchCategorySubtitle"
        android:text="Average Depreciation Cost ($/year)"/>
    <TextView
        style="@style/RangeBarValue"
        android:id="@+id/depr_cost_tv"/>
    <com.appyvet.rangebar.RangeBar
        android:id="@+id/depreciation_cost_range_bar"
        custom:tickStart="500"
        custom:tickEnd="20000"
        custom:tickInterval="500"
        style="@style/SearchRangeBarStyle"
        />

</LinearLayout>