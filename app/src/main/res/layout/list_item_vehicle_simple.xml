<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_overlay"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.parse.ParseImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:id="@+id/tagged_vehicle_image_view"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagged_vehicle_yr_mk_model_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagged_vehicle_timestamp_view"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/str_see_listings"
        android:id="@+id/tagged_vehicle_see_listings_btn"/>
</LinearLayout>
