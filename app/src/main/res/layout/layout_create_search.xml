<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ListingsActivity_v2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/make_model"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/mk_md_hdr"
                expandable:contentLayout="@layout/mk_md_content"
                />

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/state_range"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/state_range_hdr"
                expandable:contentLayout="@layout/state_range_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/economy_tco"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/economy_hdr"
                expandable:contentLayout="@layout/economy_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/performance"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/performance_hdr"
                expandable:contentLayout="@layout/performance_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/engine"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/engine_hdr"
                expandable:contentLayout="@layout/engine_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/drivetrain"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/drivetrain_hdr"
                expandable:contentLayout="@layout/drivetrain_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/color_pref"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/color_hdr"
                expandable:contentLayout="@layout/color_content"/>

            <com.andexert.expandablelayout.library.ExpandableLayout
                android:id="@+id/equipments"
                style="@style/SearchHdrStyle"
                expandable:headerLayout="@layout/equipments_hdr"
                expandable:contentLayout="@layout/equipments_content"/>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/start_search_lising_req_btn"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                android:text="Search Listings" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
