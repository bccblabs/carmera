<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TableTitle"
        android:text="Edmunds Review"/>
    <TextView
        style="@style/EmptyView"
        android:id="@+id/no_edmunds_review"
        android:text="Sorry no Edmunds reviews found..."/>
    <LinearLayout
        android:id="@+id/edmunds_review_layout"
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <TextView
            style="@style/TableEntry"
            android:id="@+id/edmunds_review_date_textview"/>
        <TextView
            style="@style/TableEntry"
            android:id="@+id/edmunds_review_grade_textview"/>
        <TextView
            style="@style/TableEntry"
            android:id="@+id/edmunds_review_summary_textview"/>
        <ListView
            style="@style/ListStyle"
            android:id="@+id/edmunds_ratings_list_view"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/edmunds_branding"/>

    <com.gc.materialdesign.views.ProgressBarCircularIndetermininate
        style="@style/ProgressBarExtraLarge"
        android:layout_marginTop="100dp"
        android:paddingTop="100dp"
        android:background="#FFD700"
        android:layout_gravity="center_horizontal"
        android:id="@+id/edmunds_review_progress"/>

</LinearLayout>