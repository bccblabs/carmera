<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/TableTitle"
        android:text="Edmunds Review"/>
    <TextView
        style="@style/EmptyView"
        android:id="@+id/no_edmunds_review"
        android:text="Sorry no Edmunds reviews found..."/>
    <TextView
        style="@style/TableEntry"
        android:id="@+id/edmunds_review_date_textview"/>
    <TextView
        style="@style/TableEntry"
        android:id="@+id/edmunds_review_grade_textview"/>
    <TextView
        style="@style/TableEntry"
        android:id="@+id/edmunds_review_summary_textview"/>
    <ListView
        style="@style/ListStyle"
        android:id="@+id/edmunds_ratings_list_view"
        />
</LinearLayout>